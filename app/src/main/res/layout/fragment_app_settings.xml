<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#D8D8D8"
    tools:context="com.example.mario.provalayo.application_settings">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Set your App Parameters here:"
        android:id="@+id/textView11"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/countdown"
        android:background="@drawable/back_button"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/textView7"
        android:gravity="center_horizontal" />

    <Spinner
        android:layout_width="90dp"
        android:layout_height="110px"
        android:id="@+id/alarms"
        android:background="@drawable/back_button"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_horizontal" />

    <Spinner
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/sensibility"
        android:background="@drawable/back_button"
        android:layout_alignTop="@+id/textView9"
        android:layout_alignEnd="@+id/alarms"
        android:layout_alignBottom="@+id/textView9"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="370px"
        android:layout_height="110px"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Countdown Timer"
        android:id="@+id/textView7"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:drawablePadding="20dip"
        android:paddingLeft="15dip"
        android:paddingRight="20dip"
        android:drawableLeft="@drawable/peadlines"
        android:background="@drawable/back_button"
        android:layout_above="@+id/textView8"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="60dp"
        android:layout_marginStart="15dp"/>

    <TextView
        android:layout_width="370px"
        android:layout_height="110px"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Alarm"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:drawablePadding="20dip"
        android:paddingLeft="15dip"
        android:paddingRight="20dip"
        android:drawableLeft="@drawable/requestb"
        android:id="@+id/textView8"
        android:background="@drawable/back_button"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp" />

    <TextView
        android:layout_width="370px"
        android:layout_height="110px"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sensibility"
        android:drawableLeft="@drawable/vibra"
        android:id="@+id/textView9"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:drawablePadding="20dip"
        android:paddingLeft="15dip"
        android:paddingRight="20dip"
        android:background="@drawable/back_button"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp"
        android:layout_marginStart="15dp"/>

</RelativeLayout>
