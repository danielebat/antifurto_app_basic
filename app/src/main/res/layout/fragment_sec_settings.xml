<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#D8D8D8"
    tools:context="com.example.mario.provalayo.security_settings">

    <Button
        android:layout_width="500px"
        android:layout_height="110px"
        android:text="  Set your Email Addresses"
        android:id="@+id/button3"
        android:drawableLeft="@drawable/mail"
        android:layout_gravity="center"
        android:drawablePadding="2dip"
        android:paddingLeft="30dip"
        android:paddingRight="26dip"
        android:background="@drawable/back_button"
        android:onClick="startEmailSettings"
        android:layout_above="@+id/button4"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp" />

    <Button
        android:layout_width="500px"
        android:layout_height="110px"
        android:text="  Set your Phone Numbers"
        android:id="@+id/button4"
        android:drawableLeft="@drawable/phone"
        android:layout_gravity="center"
        android:drawablePadding="2dip"
        android:paddingLeft="30dip"
        android:paddingRight="26dip"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/back_button"
        android:onClick="startPhoneSettings" />

    <Button
        android:layout_width="500px"
        android:layout_height="110px"
        android:text="  Set yout Permanent Code"
        android:id="@+id/button5"
        android:drawableLeft="@drawable/pass"
        android:layout_gravity="center"
        android:drawablePadding="2dip"
        android:paddingLeft="30dip"
        android:paddingRight="26dip"
        android:layout_marginTop="60dp"
        android:background="@drawable/back_button"
        android:onClick="startCodeSettings"
        android:layout_below="@+id/button4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Set your Secure Parameters here:"
        android:id="@+id/textView10"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
